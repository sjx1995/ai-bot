{
  "name": "ai-bot",
  "version": "0.2.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "ts-node --esm ./src/index.ts --watch",
    "watch": "rollup -c -w",
    "compile": "tsc",
    "build:rollup": "rollup -c",
    "build:pkg": "pkg ./bundle/index.js --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output ./bin/ai-bot-x64",
    "build": "yarn build:rollup && yarn build:pkg",
    "build:version": "node ./gen-version.js"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.0.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "clipboardy": "^3.0.0",
    "dotenv": "^16.3.1",
    "figlet": "^1.6.0",
    "marked": "^5.1.1",
    "marked-terminal": "^5.2.0",
    "openai": "^3.3.0",
    "ora": "^6.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@sunly95/gen-version": "^2.1.0",
    "@types/figlet": "^1",
    "@types/marked": "^5.0.1",
    "@types/marked-terminal": "^3.1.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "pkg": "^5.8.1",
    "rollup": "^3.26.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*",
      "dist/*.js"
    ]
  }
}
